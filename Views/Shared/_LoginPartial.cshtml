@using Microsoft.AspNetCore.Identity
@using HireMeApp.Areas.Identity.Data
@inject SignInManager<HireMeAppUser> SignInManager
@inject UserManager<HireMeAppUser> UserManager

<script>
    var url = '@Url.Action("Index", "Home")';
    $('#submit_btn').on('click',function(e){
        e.preventDefault();
        $.ajax({
            type: "POST",
            url: url,
            data:$('form').serialize(),
        }).done(function (r) {
            $('#Display').html(r);
            }).fail(function (e) {
            console.log(e.responseText);
        });
    });
</script>
@if (SignInManager.IsSignedIn(User))
    {
        HireMeAppUser user = await UserManager.GetUserAsync(User);
        var fullName = $"{user.FirstName} {user.LastName}";


        <a id="manage" class="nav-link text-dark" style="float: right" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello, @fullName!</a>
        <br/>
            @*<a class="nav-link text-dark" id="logout" asp-area="Identity" asp-page="/Account/Logout">Logout</a>*@
            <form id="logoutForm" class="form-inline nav-link text-dark" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="">
                <button id="logout" type="submit" style="float: right" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
    }
    else
    {
        <a class="nav-link text-dark" id="register" style="float: right" asp-area="Identity" asp-page="/Account/Register">Register</a>
        <br/>
        <a class="nav-link text-dark" id="login" style="float: right" asp-area="Identity" asp-page="/Account/Login">Login</a>
    }

